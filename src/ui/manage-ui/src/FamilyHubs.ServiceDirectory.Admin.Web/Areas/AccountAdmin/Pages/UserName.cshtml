@page "{cacheId}"
@model UserName
@{
    ViewData["Title"] = "What's their full name?";
    var error = Model.Errors.GetErrorIfTriggered();
    Model.Errors.ErrorIdToHtmlElementId = _ => "fullName";
}

<input class="govuk-input @(error?.InputClass)" id="fullName" asp-for="@Model.FullName" type="text" maxlength="255" autocomplete="off" title="Full Name">